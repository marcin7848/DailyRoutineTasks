<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/widget">
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/widget_task_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/task_day_shape"
            android:text="Thu 09.02.2021"
            android:textColor="@color/task_day_text"
            android:textStyle="bold"
            android:layout_margin="5dp" />
    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView android:id="@+id/widgetTasksList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:dividerHeight="1dp"
            android:divider="#000000"
            tools:listitem="@layout/task_row_widget"/>
    </LinearLayout>
</LinearLayout>